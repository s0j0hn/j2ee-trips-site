        <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
        <class>com.suptrips.Trips</class>
        <class>com.suptrips.Users</class>
        <properties>
            <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/SupTrips"/>
